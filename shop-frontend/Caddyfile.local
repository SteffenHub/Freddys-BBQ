:4200 {

	log {
		output stdout
		format console
	}

	handle /order/* {
		uri strip_prefix /order
		reverse_proxy localhost:8060
	}

	handle /delivery/* {
		uri strip_prefix /delivery
		reverse_proxy localhost:8050
	}

	handle /kitchen/* {
		uri strip_prefix /kitchen
		reverse_proxy localhost:8070
	}

	handle {
		root * dist/shop-frontend/browser
		encode gzip
		try_files {path} /index.html
		file_server
	}
}
